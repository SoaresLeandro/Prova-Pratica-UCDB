@model IEnumerable<ProvaPraticaUCDB.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr @{ if (item.Status.ToString() == "Expired") 
                    {
                        @Html.TextBoxFor(model => item.Status, new { @class = "bg-danger" })  
                    } 
                    else if (item.Status.ToString() == "CloseExpiration") 
                    {
                        @Html.TextBoxFor(model => item.Status, new { @class = "bg-warning" })  
                    } else if (item.Status.ToString() == "Valid")
                    {
                        @Html.TextBoxFor(model => item.Status, new { @class = "bg-success" })  
                    }
                }>
                <td>
                    @Html.DisplayFor(modelItem => item.NameProduct)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                    <a asp-action="Discount" asp-route-id="@item.Id" class="btn btn-default">Desconto</a>
                </td>
            </tr>
        }
    </tbody>
</table>
